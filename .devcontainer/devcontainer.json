{
  "name": "bms-json-server-dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-24-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
  "updateContentCommand": "npm ci || npm install",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y jq python3-pip && pip3 install -r requirements.txt",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "json-server" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml"
      ]
    }
  }
}

